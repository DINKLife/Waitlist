# Database (optional - not used for SendGrid-only waitlist; for future auth/DB)
DATABASE_URL="postgresql://username:password@localhost:5432/database_name?schema=public"

# NextAuth (optional - not used for SendGrid-only waitlist; for future auth)
# Generate with: npx auth secret
AUTH_SECRET="your_auth_secret_here"

# SendGrid (required for waitlist welcome emails)
# Create API key at https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY="your_sendgrid_api_key_here"
SENDGRID_FROM_EMAIL="hello@dinklife.com"
SENDGRID_FROM_NAME="DINKLife Team"

# Next.js Public URL (optional - for links in emails)
NEXT_PUBLIC_BASE_URL="http://localhost:3000"